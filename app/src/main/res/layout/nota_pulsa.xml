<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="15dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:background="@color/colorAbu"
                android:textColor="@color/colorHitam"
                android:text="~~~ Nota ~~~"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorPutih"
                android:layout_marginBottom="25dp"
                android:background="@color/colorBiru"
                android:text="Informasi Transaksi"
                />

            <View android:background="@color/colorBiru"
                android:layout_width = "match_parent"
                android:layout_height="0.6dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorHitam"
                        android:text="Kode Transaksi"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="12345"
                        />
                </TableRow>

                <View
                    android:background="@color/colorBiru"
                    android:layout_width = "match_parent"
                    android:layout_height="0.6dp"/>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorHitam"
                        android:text="Telepon"
                        />
                    <TextView
                        android:id="@+id/nota_nomer"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="08155198xxx"
                        />
                </TableRow>

                <View
                    android:background="@color/colorBiru"
                    android:layout_width = "match_parent"
                    android:layout_height="0.6dp"/>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHitam"
                        android:text="Pulsa"
                        />
                    <TextView
                        android:id="@+id/nota_pulsa"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="100000"
                        />
                </TableRow>

                <View
                    android:background="@color/colorBiru"
                    android:layout_width = "match_parent"
                    android:layout_height="0.6dp"/>

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHitam"
                        android:textSize="15dp"
                        android:text="Total"
                        />
                    <TextView
                        android:id="@+id/nota_total"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Rp 999xxx"
                        />
                </TableRow>
            </TableLayout>

            <View
                android:layout_marginTop="50dp"
                android:background="@color/colorAbuDark"
                android:layout_gravity="center"
                android:layout_width = "260dp"
                android:layout_height="0.8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Copyright 2018 | Dzulkarnain Inc"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>