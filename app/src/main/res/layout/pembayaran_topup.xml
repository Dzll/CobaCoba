<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/crdpls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorBiruLight2"
        android:layout_margin="5dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:text="Rp "
                        />

                    <TextView
                        android:id="@+id/add_nominal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:text="nominal"
                        />

                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="TopUp Cash"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Dzulkarnainc"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_below="@+id/crdpls"
        android:id="@+id/hghgh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bank Transfer"/>

    <LinearLayout
        android:layout_below="@+id/hghgh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_mandirii"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_weight="0.7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18.5dp"
                        android:textSize="17dp"
                        android:text="Bank Mandiri"
                        />

                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_marginTop="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_right"
                        />
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_bca"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_weight="0.9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18.5dp"
                        android:textSize="17dp"
                        android:text="Bank BCA"
                        />

                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_marginTop="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_right"
                        />
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_bni"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_weight="0.97"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18.5dp"
                        android:textSize="17dp"
                        android:text="Bank BNI"
                        />

                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_marginTop="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_right"
                        />
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_bri"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_weight="0.97"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18.5dp"
                        android:textSize="17dp"
                        android:text="Bank BRI"
                        />

                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_marginTop="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_right"
                        />
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.43"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_cimb"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_weight="0.95"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18.5dp"
                        android:textSize="17dp"
                        android:text="Bank CIMB"
                        />

                    <ImageView
                        android:layout_weight="0.66"
                        android:layout_marginTop="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_action_right"
                        />
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>