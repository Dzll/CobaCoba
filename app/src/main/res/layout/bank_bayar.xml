<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:background="@color/colorAbu"
                android:textColor="@color/colorHitam"
                android:text="~~~ Transfer ~~~"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorPutih"
                android:layout_marginBottom="10dp"
                android:background="@color/colorBiru"
                android:text="Informasi Transaksi"
                />

            <TextView
                android:id="@+id/transfer_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="13dp"
                android:gravity="center"
                />

            <View android:background="@color/colorBiru"
                android:layout_margin="10dp"
                android:layout_width = "match_parent"
                android:layout_height="0.6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lakukan Pembayaran Sebesar : "

                />

            <TableLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:text="Rp "
                        />
                    <TextView
                        android:id="@+id/transfer_nominal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:text="49000"
                        />

                </TableRow>

            </TableLayout>

            <View android:background="@color/colorBiru"
                android:layout_margin="10dp"
                android:layout_width = "match_parent"
                android:layout_height="0.6dp"/>

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12dp"
                android:text="Pembayaran dapat dilakukan ke salah satu nomor rekening a/n Pulsaku.co.id"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_mandirii"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_weight="0.9"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bank Mandiri"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0700 000 544 221"
                            />

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.3"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_bca"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_weight="0.86"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bank BCA"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="731 022 2456"
                            />

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.4"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_bni"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_weight="1.17"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bank BNI"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="023 822 2008"
                            />

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageView
                        android:layout_weight="0.5"
                        android:layout_width="60dp"
                        android:src="@mipmap/ic_bri"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_weight="0.97"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bank BRI"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="034 101 005 234 566"
                            />

                    </LinearLayout>

                </TableRow>
            </TableLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>